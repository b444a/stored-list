<div class="container">
    <h1>üçø My Favorite Snacks</h1>
    
    <div class="snacks-list">
        {{#each snacks}}
            <div class="snack-item">
                <span class="snack-name">{{this.name}}</span>
                <span class="snack-category">{{this.category}}</span>
            </div>
        {{else}}
            <p class="no-snacks">No snacks found!</p>
        {{/each}}
    </div>
</div>
